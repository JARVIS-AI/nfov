{
    "name": "nfov",
    "productName": "nfov",
    "version": "1.0.7",
    "description": "Simple ASCII art viewer for macOS powered by Electron",
    "os": [
        "darwin"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nrlquaker/nfov.git"
    },
    "main": "src/index.ts",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "tslint --project tsconfig.json --type-check; markdownlint README.md"
    },
    "keywords": [
        "nfo",
        "diz",
        "asc",
        "ascii-art",
        "electron",
        "macos"
    ],
    "author": "nrlquaker",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/nrlquaker/nfov/issues"
    },
    "homepage": "https://github.com/nrlquaker/nfov",
    "config": {
        "forge": {
            "make_targets": {
                "darwin": [
                    "zip"
                ]
            },
            "electronPackagerConfig": {
                "packageManager": "npm",
                "icon": "assets/icons/icon.icns",
                "appCategoryType": "public.app-category.utilities",
                "extendInfo": "assets/Info.plist",
                "extraResource": [
                    "assets/icons/file_diz.icns",
                    "assets/icons/file_nfo.icns",
                    "assets/icons/file_asc.icns",
                    "assets/icons/file_txt.icns",
                    "assets/icons/file_ans.icns"
                ],
                "ignore": [
                    ".vscode",
                    "assets/icons",
                    "assets/Info.plist",
                    "screenshots",
                    "node_modules/photonkit/docs"
                ]
            },
            "github_repository": {
                "owner": "nrlquaker",
                "name": "nfov"
            }
        }
    },
    "dependencies": {
        "anchorme": "^1.1.2",
        "blob-to-buffer": "^1.2.7",
        "dom-to-image": "https://github.com/nrlquaker/dom-to-image/archive/2.6.1.tar.gz",
        "electron-compile": "^6.4.1",
        "electron-settings": "^3.1.4",
        "fs": "0.0.1-security",
        "iconv-lite": "^0.4.21",
        "jscolor-picker": "^2.0.4",
        "path": "^0.12.7",
        "photonkit": "^0.1.2",
        "tslib": "^1.9.0"
    },
    "devDependencies": {
        "@types/blob-to-buffer": "^1.2.0",
        "@types/electron-settings": "^3.1.1",
        "electron": "^1.8.4",
        "electron-forge": "^5.2.0",
        "electron-prebuilt-compile": "1.8.4",
        "markdownlint-cli": "^0.8.1",
        "prettier": "^1.12.1",
        "tslint": "^5.9.1",
        "typescript": "^2.8.3"
    }
}
