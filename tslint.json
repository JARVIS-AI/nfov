{
    "extends": "tslint:recommended",
    "rules": {
        "object-literal-sort-keys": false,
        "no-use-before-declare": true,
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "max-line-length": [
            true,
            95
        ],
        "no-require-imports": true
    }
}
